pipeline {
    agent any
    environment {
        GRADLE_OPTS = '-Dorg.gradle.daemon=false'
        BASEDIR = 'examples/spring-boot'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '1'))
    }
    stages {
        stage('checkout') {
            steps {
                sh 'cd $BASEDIR'
                sh 'chmod u+x ./gradlew'
            }
        }
        stage('test') {
            steps {
                sh "./gradlew clean assemble test"
            }
        }
    }
}